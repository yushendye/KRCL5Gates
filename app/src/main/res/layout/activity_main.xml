<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        style="@style/Toolbar.TitleText"
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0px"
        android:background="#ffff"
        android:textAlignment="center"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextAppearance="@style/Toolbar.TitleText">

        <TextView
            android:id="@+id/toolbar_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="#ffffff"
            android:drawableLeft="@drawable/kr_logo"
            android:maxLines="2"
            android:text="Konkan Railway Corporation Limited\n(A Government of India Undertaking)"
            android:textColor="@color/blue"
            android:textSize="20dp" />
    </androidx.appcompat.widget.Toolbar>

    <EditText
        android:id="@+id/train_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:height="40dp"
        android:background="@drawable/text_back"
        android:hint="Enter train number"
        android:textAlignment="center" />

    <TableLayout
        android:id="@+id/table"
        android:shrinkColumns="*"
        android:collapseColumns="*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/train_no"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true">

        <TableRow
            android:gravity="center_horizontal"
            android:padding="5dp">

            <Button
                android:id="@+id/gen_btn1"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:background="@drawable/gen_btn"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:onClick="generate_PN"
                android:text="SM PN Gate1"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/sm_pn1"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:background="@drawable/border"
                android:gravity="center"
                android:text="SM-PN1" />

            <TextView
                android:id="@+id/sm_pn_time1"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:background="@drawable/border"
                android:gravity="center"
                android:text="SM-PN1 Time" />

            <TextView
                android:id="@+id/gm_pn1"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:gravity="center"
                android:text="GM PN1" />

            <TextView
                android:id="@+id/gm_pn_time1"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:gravity="center"
                android:text="GM PN1 Time" />

            <Button
                android:id="@+id/ack_btn1"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="@drawable/ack_btn"
                android:gravity="center"
                android:onClick="final_commit_action"
                android:text="ACK PN 2"
                android:textColor="#ffffff" />
        </TableRow>
        <TableRow
            android:gravity="center_horizontal"
            android:padding="5dp">

            <Button
